<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cryptocurrencies_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:cardElevation="8dp"
    android:layout_margin="15dp"
    app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp">
            <ImageView
                android:id="@+id/cryptocurrencies_img"
                android:src="@drawable/nopicture_availableicon1"
                android:scaleType="centerCrop"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/cryptocurrencies_symbol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#14142B"
                android:paddingTop="3dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_weight="2"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/cryptocurrencies_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#14142B"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/cryptocurrencies_price_change_percentage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#14142B"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>