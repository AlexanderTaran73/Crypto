<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/notifications_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:cardElevation="8dp"
    android:layout_margin="15dp"
    app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp">
            <ImageView
                android:id="@+id/notifications_img"
                android:src="@drawable/nopicture_availableicon1"
                android:scaleType="centerCrop"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/notifications_symbol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"
                android:textColor="#14142B"
                android:paddingTop="3dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2">
            <TextView
                android:id="@+id/notifications_type"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#14142B"
                android:gravity="center"
                android:layout_marginRight="10dp"
/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <ImageButton
            android:id="@+id/notifications_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/x"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/oval_button"
            android:scaleType="fitXY"
            android:elevation="10dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>